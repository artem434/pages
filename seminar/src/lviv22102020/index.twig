            <div class="places__img-big">
              <picture>
                <source srcset="{{ link }}/place_1_big.webp" type="image/webp"/>
                <img src="{{ link }}/place_1_big-min.jpg" alt="business"/>
              </picture>
            </div>
            <div class="places__img-small">
              <picture>
                <source srcset="{{ link }}/place_1_min.webp" type="image/webp"/>
                <img src="{{ link }}/place_1_min-min.jpg" alt="business"/>
              </picture>
