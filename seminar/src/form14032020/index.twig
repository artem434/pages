                                    <div class="form-group">
                                        <input id="mail" name="email" type="email" placeholder="Email " required="required" data-msg-required="Це поле необхідно заповнити" class="form-control"/>
                                    </div>
                                    <div class="form-group">
                                        <input id="phone" name="phone" type="text" data-rule-phoneUA="true" placeholder="Моб. тел." data-require="@phones,mask" required="required" data-msg-required="Це поле необхідно заповнити" class="form-control"/>
                                    </div>
                                    <input name="source" type="hidden" value="kadrovyku13032020"/>
                                    <div class="form__btn">
                                        <button type="submit" class="btn btn-default">Надіслати</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="form__description">Подарунок доступний для скачування ще</div>
